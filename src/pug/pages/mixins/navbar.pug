// Navbar
mixin navbar(options)

    nav.navbar.navbar-marketing.navbar-expand-lg(class=options.navbarBg, class=options.navbarStyle, class=options.navbarPosition)
        div(class=options.navbarContainer)
            a.navbar-brand(href='index.html', class=options.navbarBrandColor)
                | Utilities Software Limited
            button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
                i(data-feather='menu')
            #navbarSupportedContent.collapse.navbar-collapse
                ul.navbar-nav.ms-auto.me-lg-5
                    li.nav-item
                        a.nav-link(href='index.html')
                            | Home 
                    li.nav-item
                        a.nav-link(href='about.html')
                            | About Us  
                    li.nav-item
                        a.nav-link(href='services.html')
                            | Services 
                    li.nav-item
                        a.nav-link(href='testimonials.html')
                            | Testimonials 
                    li.nav-item
                        a.nav-link(href='portfolio.html')
                            | Portfolio
                    li.nav-item
                        a.nav-link(href='contact.html')
                            | Contact Us
                    
                  
                    